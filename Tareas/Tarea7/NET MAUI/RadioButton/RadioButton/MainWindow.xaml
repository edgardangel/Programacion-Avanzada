<Window x:Class="RadioButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Campos de entrada -->
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" Text="a:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Left" Margin="40,18,0,0" VerticalAlignment="Top" Width="50" Text="0"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="20,50,0,0" Text="b:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Left" Margin="40,48,0,0" VerticalAlignment="Top" Width="50" Text="0"/>

        <StackPanel HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top">
            <RadioButton x:Name="rbSuma" Content="Suma" IsChecked="True"/>
            <RadioButton x:Name="rbResta" Content="Resta"/>
            <RadioButton x:Name="rbMulti" Content="Multi"/>
            <RadioButton x:Name="rbDiv" Content="Div"/>
        </StackPanel>

        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="100,120,0,0" VerticalAlignment="Top" Width="75"/>

        <StackPanel HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top">
            <RadioButton x:Name="rbCmPulg" Content="Cm a pulgadas" IsChecked="True"/>
            <RadioButton x:Name="rbPulgCm" Content="Pulgadas a Cm"/>
        </StackPanel>

        <Button x:Name="btnConvertir" Content="Convertir" HorizontalAlignment="Left" Margin="250,120,0,0" VerticalAlignment="Top" Width="75"/>

        <TextBlock x:Name="txtResultado" HorizontalAlignment="Left" Margin="180,150,0,0" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
