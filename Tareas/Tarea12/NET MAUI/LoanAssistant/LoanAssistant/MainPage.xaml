<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoanAssistant.MainPage">

    <StackLayout Padding="20">
        <Entry x:Name="BalanceEntry" Placeholder="Loan Balance" Keyboard="Numeric" />
        <Entry x:Name="InterestEntry" Placeholder="Interest Rate" Keyboard="Numeric" />
        <Entry x:Name="MonthsEntry" Placeholder="Number of Payments" Keyboard="Numeric" />
        <Entry x:Name="PaymentEntry" Placeholder="Monthly Payment" Keyboard="Numeric" IsReadOnly="True" />
        <Button x:Name="ComputeButton" Text="Compute Monthly Payment" Clicked="ComputeLoan" />
        <Button x:Name="NewLoanButton" Text="New Loan Analysis" Clicked="NewLoanAnalysis" IsEnabled="False" />
        <Label x:Name="AnalysisLabel" Text="Loan Analysis:" FontSize="14" TextColor="Black" />
        <Button Text="Exit" Clicked="ExitButton_Clicked" />
    </StackLayout>

</ContentPage>